
Table crisis;
PFont fontpais;


void setup() {

  
  size(1200, 1000);
  background (100);

  
  crisis=loadTable("Crisis.csv", "header");

  fontpais=loadFont("AvenirNextCondensed-Heavy-30.vlw");
  smooth();

  
}

void draw() {
  
  
  
  background (178, 239, 255, 20);
  crisis.trim();
  textFont(fontpais);
  //Alemania - Fila 0
  
fill (170);
